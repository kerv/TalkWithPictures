  http://go.microsoft.com/fwlink/?LinkId=169433
  -->

<configuration>
  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" />        
  </system.web>

  <connectionStrings>
    <add name="StorageConnectionString" connectionString="DefaultEndpointsProtocol=http;AccountName=YOUR_BLOB_NAME;AccountKey=PRIMARY_KEY" />
  </connectionStrings>

  <appSettings>
    <add key="BingSearchAPIKey" value="YOUR_SEARCH_API_KEY"/>  
  </appSettings>
  
  <system.webServer>
    <handlers>
      <add name="jpgs" verb="*" path="*.jpg"
          type="TalkWithPictures.ImageHandler, TalkWithPictures" preCondition="managedHandler"/>
      <add name="png" verb="*" path="*.png"
          type="TalkWithPictures.ImageHandler, TalkWithPictures" preCondition="managedHandler"/>
      <add name="agifs" verb="*" path="*.gif"
          type="TalkWithPictures.ImageHandler, TalkWithPictures" preCondition="managedHandler"/>
    </handlers>
    <modules runAllManagedModulesForAllRequests="false" />
  </system.webServer>

</configuration>
